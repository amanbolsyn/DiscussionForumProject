<!DOCTYPE html>
<html lang="en">
<!--Head section-->
<%- include("./partials/head.ejs") %>

    <body>

        <!-- Header Section -->
        <%- include("./partials/header.ejs") %>

            <!-- Main Content -->
            <main>
                <div class="container">
                    <section class="post-list">
                        <div id="postsContainer">
                            <h2>
                                <%= post.title%>
                            </h2>
                            <p>
                                <%= post.body%>
                            </p>
                            <a href="#">Aman Bolsyn</a><br><br>
                            <button>Edit</button>
                            <button id="delete" data-doc=<%=post._id%>>Delete</button>
                        </div>
                    </section>
                </div>
            </main>

            <!-- Footer Section -->
            <%- include("./partials/footer.ejs") %>

                <script>
                    //Delete post logic using fetch
                    const trashcan = document.getElementById('delete');

                    trashcan.addEventListener('click', (e) => {
                        const endpoint = `/post/${trashcan.dataset.doc}`;

                        fetch(endpoint, {
                            method: 'DELETE',
                        })
                            .then(response => response.json())
                            .then((data) => {
                                alert("Post was successfully deleted");
                                window.location.href = data.redirect
                            })
                            .catch((err) => { console.log(err) })
                    });
                </script>
    </body>

</html>